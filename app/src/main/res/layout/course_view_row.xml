<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

        <TextView
            android:id="@+id/txt_course_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/txt_catch_phrase"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="14dp"
            />


    <RelativeLayout
        android:id="@+id/third_row"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/txt_course_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:minWidth="100dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_course_length"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txt_course_area"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fourth_row"
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/img_course"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:minHeight="180dp"
            android:minWidth="180dp" />

        <ImageButton
            android:id="@+id/btn_favorite"
            android:layout_width="50dp"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/favorite_button"
            android:paddingTop="20dp" />

        <LinearLayout
            android:id="@+id/rate_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/img_icon_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_comment" />

            <TextView
                android:id="@+id/txt_num_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="15"
                android:gravity="center"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_icon_spot"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/txt_num_comment"
                android:src="@drawable/icon_num_spot" />

            <TextView
                android:id="@+id/txt_spot_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_icon_spot"
                android:gravity="center"
                android:text="8"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_stars"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:adjustViewBounds="false"
                android:background="@drawable/star_rate_4"
                android:cropToPadding="false"
                android:maxHeight="10dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_tags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/layout_creator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_creater"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ic_pen_creator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/ic_pen_creator"
            android:background="@drawable/icon_pen_creator" />
    </RelativeLayout>

</LinearLayout>
