<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".fragment.RegisterFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp">

        <TextView
            android:id="@+id/tv_back_resgister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:text="@string/Back"
            android:textColor="@color/search_course_color_close_text"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/tv_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/register_title"
            android:gravity="end"
            android:paddingEnd="@dimen/_15sdp"
            android:paddingStart="@dimen/_1sdp"
            android:text="@string/search_course_close"
            android:textColor="@color/search_course_color_close_text"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/register_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/SignUp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_changeInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/changeInfo"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:visibility="gone" />
    </RelativeLayout>

    <include layout="@layout/item_divider" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/item_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/search_course_color_title_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@string/TextUsername"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <include layout="@layout/item_divider" />

                <EditText
                    android:id="@+id/edt_username"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_47sdp"
                    android:background="@color/backgroud"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="@dimen/_1sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColorHint="@color/Gray"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>

            <include layout="@layout/item_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/search_course_color_title_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@string/TextUserIcon"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <include layout="@layout/item_divider" />

                <ImageButton
                    android:id="@+id/select_userIcon"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scaleType="fitCenter"
                    android:background="@drawable/plus_button"
                    android:textColorHint="@color/Gray" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/search_course_color_title_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@string/TextEmailUser"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C8CDD0" />

                <EditText
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_47sdp"
                    android:background="@color/backgroud"
                    android:hint="@string/hint_email"
                    android:inputType="textEmailAddress"
                    android:paddingEnd="@dimen/_1sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColorHint="@color/Gray"
                    android:textSize="@dimen/_15sdp" />
            </LinearLayout>

            <include layout="@layout/item_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/item_divider" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/search_course_color_title_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@string/PassWord"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <include layout="@layout/item_divider" />

                <EditText
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_47sdp"
                    android:background="@color/backgroud"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:paddingEnd="@dimen/_1sdp"
                    android:paddingStart="@dimen/_15sdp"
                    android:textColorHint="@color/Gray"
                    android:textSize="@dimen/_12sdp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C8CDD0" />
            </LinearLayout>

            <include layout="@layout/item_divider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/search_course_color_title_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@string/TextGender"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <include layout="@layout/item_divider" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_47sdp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/rlt_man"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@+id/imv_mark_man"
                            android:gravity="center_vertical"
                            android:paddingEnd="@dimen/_1sdp"
                            android:paddingStart="@dimen/_15sdp"
                            android:text="@string/TextMan"
                            android:textSize="@dimen/_15ssp" />

                        <ImageView
                            android:id="@+id/imv_mark_man"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@string/image_description"
                            android:src="@drawable/ic_mark_red" />

                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#C8CDD0" />

                    <RelativeLayout
                        android:id="@+id/rlt_woman"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:paddingEnd="@dimen/_1sdp"
                            android:paddingStart="15dp"
                            android:text="@string/TextWoman"
                            android:textSize="@dimen/_15ssp" />

                        <ImageView
                            android:id="@+id/imv_mark_woman"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="10dp"
                            android:contentDescription="@string/image_description"
                            android:src="@drawable/ic_mark_red"
                            android:visibility="gone" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/item_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C8CDD0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/search_course_color_title_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@string/TextAge"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C8CDD0" />

                <RelativeLayout
                    android:id="@+id/rlt_age"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_47sdp">

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/select_age"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/_1sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="@string/register_10t"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/select_age"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_description"
                        android:paddingEnd="@dimen/_16sdp"
                        android:paddingStart="@dimen/_1sdp"
                        android:textColor="@color/search_course_color_row"
                        android:textSize="@dimen/_16sdp"
                        app:srcCompat="@drawable/icon_next" />

                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/item_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C8CDD0" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/search_course_color_title_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@string/TextPrefecture"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C8CDD0" />

                <RelativeLayout
                    android:id="@+id/rlt_prefecture"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_47sdp">

                    <TextView
                        android:id="@+id/tv_prefecture"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/im_choose"
                        android:gravity="center_vertical"
                        android:paddingEnd="@dimen/_1sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:text="@string/register_hok"
                        android:textSize="@dimen/_12ssp" />

                    <ImageView
                        android:id="@+id/im_choose"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:contentDescription="@string/image_description"
                        android:paddingEnd="@dimen/_16sdp"
                        android:paddingStart="@dimen/_1sdp"
                        android:text="@string/search_course_text_row"
                        android:textColor="@color/search_course_color_row"
                        android:textSize="@dimen/_16sdp"
                        app:srcCompat="@drawable/icon_next" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C8CDD0" />
            </LinearLayout>

            <include layout="@layout/item_divider" />

            <Button
                android:id="@+id/appCompatButtonLogin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/custom_frame"
                android:text="@string/SignUp"
                android:textAlignment="center"
                android:textColor="@color/backgroud"
                android:textSize="@dimen/_12sdp" />

            <Button
                android:id="@+id/changeInfo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:background="@drawable/custom_frame"
                android:text="@string/changeInfo"
                android:textAlignment="center"
                android:textColor="@color/backgroud"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone" />
        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>
</LinearLayout>

