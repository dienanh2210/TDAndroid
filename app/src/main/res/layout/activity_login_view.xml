<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroud"
    tools:context="vn.javis.tourde.activity.LoginActivity">
    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">
            <TextView
                android:id="@+id/tv_back_basicinfo_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10ssp"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/search_course_color_close_text" />
            <TextView
                android:id="@+id/tv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/topic_title"
                android:gravity="right"
                android:paddingRight="@dimen/_11sdp"
                android:text="@string/search_course_close"
                android:textColor="@color/search_course_color_close_text"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/LoginView"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/search_course_color_title_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="@string/LoginGmail"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>
        <EditText
            android:id="@+id/edt_emaillogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_36sdp"
            android:background="@color/backgroud"
            android:hint="@string/hint_email"
            android:textColorHint="@color/Gray"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/search_course_color_title_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="@string/PassWord"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>
        <EditText
            android:id="@+id/edt_passwordlogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen60"
            android:background="@color/backgroud"
            android:hint="@string/hint_password"
            android:textColorHint="@color/Gray"
            android:layout_marginLeft="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>

        <Button
            android:id="@+id/bt_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:background="@drawable/custom_frame"
            android:layout_marginTop="@dimen/_10sdp"
            android:text="@string/text_login"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textColor="@color/backgroud"
            android:textSize="@dimen/_15sdp"
            android:textAlignment="center" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/textViewLinkRegister"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:textColor="@color/colorPrimar"
            android:text="@string/CreateOne"
            android:textSize="@dimen/_15sdp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@color/Gray">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/search_course_color_title_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="@string/SNS"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/backgroud"
            android:layout_height="@dimen/_44sdp">

            <ImageView
                android:layout_width="@dimen/_26ssp"
                android:layout_height="@dimen/_26ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/icon_facebook" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_55sdp"
                android:text="@string/LoginFacebook"
                android:paddingLeft="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_13sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorText"/>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_16sdp"
                android:text="@string/search_course_text_row"
                android:textColor="@color/search_course_color_row"
                android:textSize="@dimen/_16ssp"
                app:srcCompat="@drawable/icon_next" /> </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/backgroud"
            android:layout_height="@dimen/_44sdp">

            <ImageView
                android:layout_width="@dimen/_26ssp"
                android:layout_height="@dimen/_26ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/icon_twitter" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_55sdp"
                android:text="@string/LoginTwitter"
                android:paddingLeft="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_13sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorText"/>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_16sdp"
                android:text="@string/search_course_text_row"
                android:textColor="@color/search_course_color_row"
                android:textSize="@dimen/_16ssp"
                app:srcCompat="@drawable/icon_next" /> </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/backgroud"
            android:layout_height="@dimen/_44sdp">

            <ImageView
                android:layout_width="@dimen/_26ssp"
                android:layout_height="@dimen/_26ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/icon_google" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_55sdp"
                android:text="@string/LoginGoogle"
                android:paddingLeft="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_13sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorText"/>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_16sdp"
                android:text="@string/search_course_text_row"
                android:textColor="@color/search_course_color_row"
                android:textSize="@dimen/_16ssp"
                app:srcCompat="@drawable/icon_next" /> </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlt_line"
            android:layout_width="match_parent"
            android:background="@color/backgroud"
            android:layout_height="@dimen/_44sdp">

            <ImageView
                android:layout_width="@dimen/_26ssp"
                android:layout_height="@dimen/_26ssp"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_9sdp"
                android:gravity="center_vertical|center_horizontal"
                android:src="@drawable/icon_line" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_55sdp"
                android:text="@string/LoginLine"
                android:paddingLeft="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/_13sdp"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/colorText"/>
            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/_16sdp"
                android:text="@string/search_course_text_row"
                android:textColor="@color/search_course_color_row"
                android:textSize="@dimen/_16ssp"
                app:srcCompat="@drawable/icon_next" /> </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/Gray">
        </RelativeLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</android.support.design.widget.CoordinatorLayout>
