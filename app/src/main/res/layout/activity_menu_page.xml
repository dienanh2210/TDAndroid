            <!-->

            <LinearLayout
                android:id="@+id/rlt_newuserregister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">
                <include layout="@layout/item_divider"/>

                <RelativeLayout
                    android:id="@+id/rlt_register"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_47sdp">

                    <TextView
                        android:id="@+id/tv_userregistration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:layout_toStartOf="@+id/register"
                        android:layout_alignParentStart="true"
                        android:text="@string/NewUserRegisretion"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:id="@+id/register"
                        android:layout_width="@dimen/_9sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_16sdp"
                        android:background="@drawable/icon_next" />
                </RelativeLayout></LinearLayout>

            <include layout="@layout/item_divider"
                android:id="@+id/line_register"/>

            <RelativeLayout
                android:id="@+id/login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toStartOf="@+id/iv_login"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/Login"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/iv_login"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/icon_next" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <include layout="@layout/item_divider"/>
                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_47sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/_16sdp"
                        android:text="@string/Logout"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>
            </LinearLayout>



            <include layout="@layout/item_divider"/>

            <RelativeLayout
                android:id="@+id/app_Info"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/search_course_color_title_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/AppInfo"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>

            <RelativeLayout
                android:id="@+id/rlt_tutorial"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/HowToUse"
                    android:layout_toStartOf="@+id/im_how"
                    android:layout_alignParentStart="true"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/im_how"
                    android:layout_width="@dimen/_9sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_16sdp"
                    android:background="@drawable/icon_next" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>

            <RelativeLayout
                android:id="@+id/privacy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/PrivacyPolicy"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>

            <RelativeLayout
                android:id="@+id/inquiry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/Inquiry"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>

            <RelativeLayout
                android:id="@+id/rateInApp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/RateInApp"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>

            <RelativeLayout
                android:id="@+id/version"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/search_course_color_title_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/Version"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp">

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text=""
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@color/search_course_color_title_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/MenuPageWeb"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>
            <RelativeLayout
                android:id="@+id/rlt_nippon"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_47sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:text="@string/MenuPageWebText"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/_12sdp" />
            </RelativeLayout>

            <include layout="@layout/item_divider"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>