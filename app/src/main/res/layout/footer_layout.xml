<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/header_border"
    android:baselineAligned="false"
    android:paddingTop="@dimen/_5sdp"
    android:weightSum="3">


        <RelativeLayout
            android:id="@+id/btn_home_footer"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/img_home"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_home"
                android:contentDescription="@string/button_description" />

            <TextView
                android:id="@+id/txt_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/Home"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_my_course_footer"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/img_mycourse"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_12sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/icon_course"
                android:contentDescription="@string/button_description" />

            <TextView
                android:id="@+id/txt_mycourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/MyCourse"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_badge_collection"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40sdp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/img_badge_collect"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/icon_resignter"
                android:contentDescription="@string/button_description" />

            <TextView
                android:id="@+id/txt_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:text="@string/BadgeCollection"
                android:textSize="@dimen/_10ssp" />
        </RelativeLayout>
    </LinearLayout>

