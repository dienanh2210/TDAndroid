<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_course_color_title_background"
    tools:context="vn.javis.tourde.activity.BasicInfoActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_course_color_title_background"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">

            <TextView
                android:id="@+id/tv_back_basicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10ssp"
                android:text="@string/Back"
                android:textColor="@color/search_course_color_close_text"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/tv_close_basicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/topic_title"
                android:gravity="end"
                android:paddingEnd="@dimen/_11sdp"
                android:paddingStart="@dimen/_1sdp"
                android:text="@string/search_course_close"
                android:textColor="@color/search_course_color_close_text"
                android:textSize="@dimen/_16ssp" />

            <TextView
                android:id="@+id/topic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/basic_info_title"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold" />
        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/search_course_color_title_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="@string/TextNameBasic"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:contentDescription="@string/image_description"
            android:background="@color/Gray"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/backgroud">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp">

                <ImageView
                    android:id="@+id/sun_icon"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_16sdp"
                    android:contentDescription="@string/image_description"
                    android:src="@drawable/icon_smile" />

                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="match_parent"
                    android:text="@string/hint_name_basicinfo"
                    android:textColor="@color/colorText"
                    android:layout_toEndOf="@+id/sun_icon"
                    android:layout_marginStart="@dimen/_22sdp"
                    android:textSize="@dimen/_14ssp"
                    android:paddingTop="@dimen/_33sdp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <include layout="@layout/item_divider" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/search_course_color_title_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_16sdp"
                android:text="@string/UserEmail"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </RelativeLayout>

        <include layout="@layout/item_divider" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroud">

            <TextView
                android:id="@+id/textInputEditTextPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingStart="@dimen/_20sdp"
                android:paddingEnd="@dimen/_1sdp"
                android:paddingTop="@dimen/_15sdp"
                android:text="@string/hint_email_basicinfo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen25" />
        </android.support.design.widget.TextInputLayout>

        <include layout="@layout/item_divider" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/dimen50"
            android:background="@drawable/basicinfo"
            android:text="@string/ButtonBasic"
            android:textAlignment="center"
            android:textColor="@color/backgroud"
            android:textSize="@dimen/dimen25" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.design.widget.CoordinatorLayout>
