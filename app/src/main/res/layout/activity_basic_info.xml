<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/search_course_color_title_background"
    tools:context="vn.javis.tourde.activity.BasicInfomation.BasicInfoActivity">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_course_color_title_background"
        android:orientation="vertical"
        android:visibility="visible">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp">
            <TextView
                android:id="@+id/tv_back_basicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10ssp"
                android:text="@string/Back"
                android:textColor="@color/search_course_color_close_text"
                android:textSize="@dimen/_16ssp" />
            <TextView
                android:id="@+id/tv_close_basicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/topic_title"
                android:gravity="right"
                android:paddingRight="@dimen/_11sdp"
                android:text="@string/search_course_close"
                android:textColor="@color/search_course_color_close_text"
                android:textSize="@dimen/_16ssp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/LoginView"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_17ssp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"></RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/search_course_color_title_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="@string/TextNameBasic"
                android:layout_marginTop="@dimen/_15sdp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/Gray">
        </RelativeLayout>
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@color/backgroud">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp">
                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/dimen25"
                    android:src="@drawable/icon_smile" />
                <TextView
                    android:layout_width="@dimen/_250sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginLeft="@dimen/dimen200"
                    android:paddingTop="@dimen/_25sdp"
                    android:text="@string/hint_name_basicinfo"
                    android:textColor="@color/colorText" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/Gray"></RelativeLayout>
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@color/search_course_color_title_background">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_16sdp"
                android:text="@string/UserEmail"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen5"
            android:background="@color/Gray"></RelativeLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroud">
            <TextView
                android:id="@+id/textInputEditTextPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingTop="@dimen/_15sdp"
                android:text="@string/hint_email_basicinfo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/dimen25" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/Gray"></RelativeLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/appCompatButtonLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:layout_marginTop="@dimen/dimen50"
            android:background="@drawable/basicinfo"
            android:text="@string/ButtonBasic"
            android:textAlignment="center"
            android:textColor="@color/backgroud"
            android:textSize="@dimen/dimen25" />
    </android.support.v7.widget.LinearLayoutCompat>


</android.support.design.widget.CoordinatorLayout>
