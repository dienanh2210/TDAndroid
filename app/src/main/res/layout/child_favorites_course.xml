<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        >

        <ImageView
            android:id="@+id/img_show"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_55sdp"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/Black"
            android:textSize="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="日本の優雅な風情をたっぷり満喫！おすすめサイクリングロード・京都編"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_10sdp">
        <ImageView
            android:id="@+id/img_post_user"
            android:layout_width="@dimen/_38sdp"
            android:layout_height="@dimen/_38sdp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/txt_post_username"
            android:layout_width="192dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_height="wrap_content"
            android:textColor="@color/strong_gray"
            android:layout_toEndOf="@+id/img_post_user"
            android:gravity="start|center"
            android:textSize="@dimen/_10sdp"
            android:text="@string/TextUsername" />
        <TextView
            android:id="@+id/running"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/White"
            android:textSize="@dimen/_9sdp"
            android:textStyle="bold"
            android:background="@drawable/boder_blue_favorite"
            android:layout_alignParentEnd="true"
            android:text="@string/running_now"/>

    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:background="@color/Gray"
        />
</LinearLayout>