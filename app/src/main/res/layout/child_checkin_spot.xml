<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginBottom="@dimen/_20sdp"
    android:id="@+id/ln_select_checkin_spot">
    <RelativeLayout
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp">

        <ImageView
            android:id="@+id/image_checkin_spot"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/circle_location_multi_color"
            android:contentDescription="@string/spotName" />

        <ImageView
            android:id="@+id/image_checkin_spot_cover"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/circle_location_multi_color"
            android:contentDescription="@string/spotName" />

    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/tv_spotNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spotNumber"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/tw__composer_blue"/>

        <TextView
            android:id="@+id/tv_spotName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/spotName"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/White"
            android:textSize="@dimen/_17sdp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>


</LinearLayout>